{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Beauty services"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "durationMinutes": {
      "type": "integer",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "coverImage": {
      "type": "media",
      "multiple": false
    },
    "gallery": {
      "type": "media",
      "multiple": true
    },
    "order": {
      "type": "integer"
    },
    "cost": {
      "type": "decimal"
    }
  }
}
